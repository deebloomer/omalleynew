<div>
  <% if flash[:notice] %>
    <div class="span12 alert alert-block alert-info">
      <button type="button" class="close" data-dismiss="notice">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="span12 alert alert-block alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>